<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.App">
	<Application.Resources>

		<!-- Application resource dictionary -->

        <ResourceDictionary>

            <Color
                x:Key="ewesLight">
                #4ab8ae
            </Color>

            <Color
                x:Key="ewesMedium">
                #35857d
            </Color>

            <Color
                x:Key="ewesDark">
                #002f38
            </Color>

            <Style
                TargetType="Button">

                <Setter 
                    Property="BackgroundColor"
                    Value="{StaticResource ewesLight}"/>

                <Setter
                    Property="TextColor"
                    Value="White"/>

            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>